<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

            <!-- Right and Left line -->
            <item>
                <shape android:shape="rectangle">
                    <padding
                        android:bottom="0dp"
                        android:left="1dp"
                        android:right="1dp"
                        android:top="0dp" />
                    <solid android:color="@color/colorAccentMapTitre"/>


                </shape>
            </item>

            <!-- Background -->
            <item>
                <shape>
                    <solid android:color="@color/colorCard" />
                </shape>
            </item>

        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

            <!-- Right and Left line -->
            <item>
                <shape android:shape="rectangle">
                    <padding
                        android:bottom="0dp"
                        android:left="1dp"
                        android:right="1dp"
                        android:top="0dp" />
                    <solid android:color="@color/colorAccentMapTitre"/>


                </shape>
            </item>

            <!-- Background -->
            <item>
                <shape>
                    <solid android:color="@color/colorAccentMapTitre"/>

                </shape>
            </item>


        </layer-list>

    </item>
    <item >
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
            <!-- Right and Left line -->
            <item>
                <shape android:shape="rectangle">
                    <padding
                        android:bottom="0dp"
                        android:left="1dp"
                        android:right="1dp"
                        android:top="0dp" />
                    <solid android:color="@color/colorAccentMapTitre"/>


                </shape>
            </item>
            <item>
                <shape android:shape="rectangle"  >
                    <solid android:color="@color/colorBackground"/>
                </shape>
            </item>


        </layer-list>


    </item>
</selector>